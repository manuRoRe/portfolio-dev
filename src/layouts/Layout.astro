---
import Header from "../components/Header.astro";
import "../styles/global.css";
// Supports weights 200-700
import "@fontsource-variable/readex-pro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(0,44,51,0.8),rgba(255,255,255,0))]"
    >
      <Header />
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Readex Pro Variable", system-ui, sans-serif;
  }
  body {
    background: #050505;
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
</style>
